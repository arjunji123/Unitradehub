<div class="row">
    <div class="col-12">
        <div class="card" style="margin-top: 26px;">
            <div class="card-body">
                <h4 class="header-title">
                    <%= title %>
                </h4>

                <div class="row">
                    <div class="col-lg-12">
                        <form method="post" action="/admin/<%= module_slug %>/add" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Quest</label>
                                        <input type="text" id="simpleinput" name="quest_name" class="form-control"
                                            value="">
                                    </div>
                                </div>

                                <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="quest_type" class="form-label">Quest Type</label>
                                        <select id="quest_type" name="quest_type" class="form-control">
                                            <option value="banner">Banner</option>
                                            <option value="non-banner">Non-Banner</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="activity" class="form-label">Activity</label>
                                        <select id="activity" name="activity" class="form-control">
                                            <option value="watch">Watch</option>
                                            <option value="follow">Follow</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Start Date Field -->
                                <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="start_date" class="form-label">Start Date</label>
                                        <input type="datetime-local" id="start_date" name="start_date"
                                            class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="end_date" class="form-label">End Date</label>
                                        <input type="datetime-local" id="end_date" name="end_date" class="form-control">
                                    </div>
                                </div>
                            </div>



                            <div class="row">
                                <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="social_media" class="form-label">Social Media</label>
                                        <!-- Loop over the social media names to create radio buttons -->
                                        <div>
                                            <% const socialMedias = ['Facebook', 'X', 'Instagram', 'LinkedIn', 'Snapchat', 'YouTube', 'Pinterest', 'WhatsApp']; %>
                                            <% socialMedias.forEach(media => { %>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="social_media" id="social_media_<%= media %>" value="<%= media %>">
                                                    <label class="form-check-label" for="social_media_<%= media %>">
                                                        <%= media %>
                                                    </label>
                                                </div>
                                            <% }) %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            

                            <div class="row">
                                <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Quest URL</label>
                                        <input type="text" id="simpleinput" name="quest_url" class="form-control"
                                            value="">
                                    </div>
                                </div>
                                <div class="col-lg-6 float-left">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Coin Earn</label>
                                        <input type="text" id="simpleinput" name="coin_earn" class="form-control"
                                            value="">
                                    </div>
                                </div>
                            </div>

                           
                            <div class="row">
                                <div class="col-lg-12 float-left">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Desc</label>
                                        <textarea class="form-control" id="editor" name="description"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12 float-left">
                                    <div class="mb-3">
                                        <label for="simpleinput" class="form-label">Status</label>
                                        <select class="form-control" name="status">
                                            <option value="1">Active</option>
                                            <option value="0">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-4 float-left">
                                    <button class="btn btn-primary" type="submit">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div> <!-- end col -->
                </div> <!-- end row-->
            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div> <!-- end col -->
</div>
